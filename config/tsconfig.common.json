{
  "compilerOptions": {
    "downlevelIteration": true,
    "lib": [
      "ES2019"
    ],
    "target": "ES2017",
    "module": "CommonJS",
    "strict": true,
    "outDir": "../dist",
    "noErrorTruncation": true,
    "noEmit": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "../",
    "declaration": true,
    "noUnusedParameters": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@app/*": [
        "src/*"
      ],
      "@domain/*": [
        "src/domain/*"
      ],
      "@infrastructure/*": [
        "src/infrastructure/*"
      ],
      "@adapter/*": [
        "src/domain/adapter/*"
      ],
      "@api/*": [
        "src/domain/api/*"
      ],
      "@codec/*": [
        "src/domain/codec/*"
      ],
      "@error/*": [
        "src/domain/error/*"
      ],
      "@protocol/*": [
        "src/domain/protocol/*"
      ],
      "@cli/*": [
        "src/infrastructure/cli/*"
      ],
      "@logger/*": [
        "src/infrastructure/logger/*"
      ],
      "@server/*": [
        "src/infrastructure/server/*"
      ],
      "@in/*": [
        "src/domain/protocol/in/*"
      ],
      "@out/*": [
        "src/domain/protocol/out/*"
      ],
      "@oas/*": [
        "dependencies/openapi-specifications/*"
      ],
      "@test/*": [
        "test/*"
      ]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ]
  }
}
